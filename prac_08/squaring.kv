BoxLayout:
    orientation: 'vertical'
    BoxLayout:  # Top section
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)
            text: ''  # Added text property
    Label:  # Bottom section
        id: instruction_label
        text: 'Enter a number and press "Square"'
        font_size: 24